<!-- Starts up everything needed to run the example listener/talker nodes. -->
<launch>
  <!-- The C++ talker node will publish a custom message. -->
  <node pkg="perlin_noise_node" type="talker" name="talker">
    <param name="rate" value="1"/>
    <remap from="example" to="chatter"/>
  </node>

  <rosparam command="load" file="$(find perlin_noise_node)/launch/default.yaml" />

  <!-- The C++ listener node subscribes to the custom message that either talker is publishing. -->
  <!-- <node pkg="perlin_noise_node" type="listener" name="listener">
    <remap from="example" to="chatter"/>
  </node> -->

  <!-- <include file="$(find perlin_noise_node)/launch/tools.launch"/> -->
</launch>
